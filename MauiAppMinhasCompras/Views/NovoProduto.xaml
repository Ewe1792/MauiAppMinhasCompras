<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto"
             Title="Novo Produto">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />
        
    </ContentPage.ToolbarItems>
    <VerticalStackLayout Padding="15">
        <Label Text="Descrição do produto: " Margin="10,5,10,0" />
        <Entry x:Name="txt_descricao" Margin="10,10,10,10"/>

        <Label Text="Quantidade: " Margin="10,5,10,0"/>
        <Entry x:Name="txt_quantidade" Keyboard="Numeric" Margin="10,10,10,10"/>

        <Label Text="Preço"  Margin="10,5,10,0" />
        <Entry x:Name="txt_preco" Keyboard="Numeric" Margin="10,10,10,10" />
        
    </VerticalStackLayout>
</ContentPage>